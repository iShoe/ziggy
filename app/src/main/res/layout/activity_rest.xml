<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        tools:context="com.example.aishwarya.myfoodapp.mcdActivity">


        <ImageView

            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="-10dp"
            android:src="@drawable/mcdcover" />




        <TextView

            android:id="@+id/mainName"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="McDonald's"
            android:layout_marginLeft="110dp"/>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button

                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="155dp"
                android:onClick="call"
                android:text="Call" />



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/mcchk" />
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="McChicken Meal"
                    android:layout_marginLeft="40dp"

                    />

                <TextView
                    android:id="@+id/price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="Rs. 180" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:text="-"
                        android:onClick="minus1"/>

                    <TextView
                        android:id="@+id/quantity1"
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"

                        android:text="0"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:text="+"
                        android:onClick="plus1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"

                    android:src="@drawable/mcvg" />
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="McVeggie Meal"
                    android:layout_marginLeft="40dp"
                    />

                <TextView
                    android:id="@+id/price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="Rs. 140" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:text="-"
                        android:onClick="minus2"/>

                    <TextView
                        android:id="@+id/quantity2"
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"

                        android:text="0"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:text="+"
                        android:onClick="plus2"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/nugs"/>
                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nuggets"
                    android:layout_marginLeft="70dp"
                    />

                <TextView
                    android:id="@+id/price4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:text="Rs. 90" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:text="-"
                        android:onClick="minus3"/>

                    <TextView
                        android:id="@+id/quantity3"
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"

                        android:text="0"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:text="+"
                        android:onClick="plus3"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:src="@drawable/mcflur"
                    android:layout_marginLeft="-20dp"
                    />
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="McFlurry"
                    android:layout_marginLeft="50dp"
                    />

                <TextView
                    android:id="@+id/price3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text="Rs. 50" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:text="-"
                        android:onClick="minus4"/>

                    <TextView
                        android:id="@+id/quantity4"
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"

                        android:text="0"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="15dp"
                        android:text="+"
                        android:onClick="plus4"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>




        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move To Cart"
            android:onClick="toCart"
            android:layout_marginLeft="120dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"/>


    </LinearLayout>

</ScrollView>